<% content_for :devise_form do %>
<h2 class="mb-4"><%= t('pages.devise.password.edit.static.name') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
                         placeholder: t('global.forms.placeholder.new_password'), class: "form-control mb-4"%>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">
        <%= t ('global.forms.placeholder.p_s_condition'), count: @minimum_password_length  %>
      </small>
    <% end %><br />
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
                         placeholder: t('global.forms.placeholder.new_password_confirmation'), class: "form-control mb-4"%>
  </div>

  <div class="actions">
    <%= f.submit t('global.forms.change_password'), class: "btn btn-dark my-4 btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<% end %>

<%= render "devise/shared/form_wrap" %>

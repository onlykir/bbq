<div class="text-center buffer-top">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user) %>

  <% if @user == current_user %>
    <p class="buffer-top">
      <%= link_to t('pages.user.show.button.edit_profile') , edit_user_path(@user),
                  class: 'btn btn-dark' %>
    </p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t('pages.user.show.static.orgonized') %>:</h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><%= @user.name %> <%= t('pages.user.show.static.nothing_orgonized') %></p>
      <% end %>
    </div>
  </div>

</div>
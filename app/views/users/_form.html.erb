<%= form_with(model: @user, local: true, html: {multipart: true}) do |form| %>

  <%= render partial: 'partials/form_errors', locals: {model: @user} %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit t('global.forms.save'), class: 'btn btn-dark' %>
    <%= t('global.forms.or') %> <%= link_to t('global.forms.back'), :back, class: "text-secondary" %>
  </div>
<% end %>
